<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Contenedor de la cámara con barras laterales PANTALLA COMPLETA -->
    <FrameLayout
        android:id="@+id/cameraContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Barra negra izquierda con botones -->
        <FrameLayout
            android:id="@+id/leftBlackBar"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/black">

            <!-- Botones en la barra izquierda -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Botón para volver -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/white"
                    android:scaleType="fitCenter" />

                <!-- Botón para iniciar cámara -->
                <ImageButton
                    android:id="@+id/btnStartCamera"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/circular_button_background"
                    android:src="@drawable/ic_camera"
                    android:scaleType="center"
                    android:contentDescription="Iniciar cámara" />

                <!-- Botón para cambiar cámara -->
                <ImageButton
                    android:id="@+id/btnSwitchCamera"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_switch_camera"
                    android:tint="@color/white"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        </FrameLayout>

        <!-- Barra negra derecha -->
        <View
            android:id="@+id/rightBlackBar"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_gravity="end" />

        <!-- Vista previa de la cámara (centrada entre las barras) -->
        <androidx.camera.view.PreviewView
            android:id="@+id/previewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="150dp"
            android:layout_marginEnd="150dp" >

            <!-- Overlay de orientación horizontal DENTRO del PreviewView -->
            <LinearLayout
                android:id="@+id/orientationOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CC000000"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_phone_horizontal"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:text="Gira tu teléfono a horizontal"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:gravity="center"
                    android:text="Para una mejor experiencia de grabación"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnContinuePortrait"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Continuar en vertical"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:strokeColor="@color/white" />

            </LinearLayout>
        </androidx.camera.view.PreviewView>

    </FrameLayout>

    <!-- Barra superior con indicadores -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Indicador de grabación -->
        <LinearLayout
            android:id="@+id/recordingIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <View
                android:id="@+id/recordingDot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/recording_dot" />

            <TextView
                android:id="@+id/recordingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grabando"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Indicador de detección de manos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/handIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/indicator_circle" />

            <TextView
                android:id="@+id/handStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin manos"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Mensaje de orientación en la parte superior (alternativo) -->
    <LinearLayout
        android:id="@+id/orientationHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:background="#FF4CAF50"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_phone_horizontal"
            android:tint="@color/white"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orientación horizontal recomendada"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>