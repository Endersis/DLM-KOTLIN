<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Vista previa de la cámara -->
    <androidx.camera.view.PreviewView
        android:id="@+id/previewView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Barra superior con indicadores -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#40000000"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Indicador de grabación -->
        <LinearLayout
            android:id="@+id/recordingIndicator"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <View
                android:id="@+id/recordingDot"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/recording_dot" />

            <TextView
                android:id="@+id/recordingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grabando"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Indicador de detección de manos -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/handIndicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/indicator_circle" />

            <TextView
                android:id="@+id/handStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin manos"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Contenedor inferior -->
    <LinearLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#40000000"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Botón para volver -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/white" />

        <!-- Botón para iniciar cámara -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStartCamera"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="Iniciar Detección"
            android:textAllCaps="false"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_camera"
            app:iconGravity="textStart" />
        <ImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_switch_camera"
            android:tint="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>